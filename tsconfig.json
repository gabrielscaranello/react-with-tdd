{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "src",
		"target": "es6",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"]
}
